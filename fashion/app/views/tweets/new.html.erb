
<div class="row" style="margin-top:60px;;white;padding:10px;border-radius:10px;background-color:white;">
  <%= form_for(@tweet) do |f| %>
  <h2 style="text-align:center">自分の服を見てもらおう！</h2>
      <div class="field" style="margin-top:30px;">
        <%= f.select :style, [["ストリート系", 0], ["可愛い系", 1],["COOL系", 2],["カジュアル系", 3],["該当しない", 4]], style: "width:10px;" %>
      </div>
         <div class="label">
            <%= f.label :写真を選択してください ,style: "width:100%;color:black;"%>
            <%= f.file_field :image , style: "margin: 0 auto;"%>
          </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10" style="margin: 0 auto;width:100%;margin-top:30px;text-align:center;">
      <button type="submit" class="btn btn-default">投稿する</button>
    </div>
  </div>
    <% end %>
  </div>

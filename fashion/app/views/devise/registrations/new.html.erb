<div class="container sign">
  <div class="row sign_box">
    <h2 class="sign_title">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :nickname %> <em>(6 文字まで）</em><br />
      <%= f.text_field :nickname, autofocus: true, maxlength: "6" ,placeholder: "ニックネーム", class: "field_box"%></p>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true ,placeholder:"メールアドレス",class: "field_box"%>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以内)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off",placeholder:"パスワード" ,class: "field_box"%>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"パスワード(確認)", class: "field_box" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する" , class: "sign_button" %>
    </div>
    <% end %>


    <%= render "devise/shared/links" %>
  </div>
</div>
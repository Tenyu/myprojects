<div class="container sign">
<div class="row sign_box">
<h2 class="sign_title">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true ,placeholder: " メールアドレス",class: "field_box"%>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off",placeholder: "パスワード", class: "field_box"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン" ,class: "sign_button"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>